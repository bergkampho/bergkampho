---
import ThemeToggle from "./ThemeToggle.astro";
---

<style>
  .navbar {
    transition: background-color 0.6s ease;
  }
</style>
<header
  class="fixed top-0 inset-x-0 z-10 data-[ui=sticky]:bg-skin-fill data-[ui=sticky]:opacity-85 navbar"
>
  <div class="container mx-auto py-1 text-sm text-skin-nav-link">
    <div class="flex justify-between items-center">
      <a class="hover:text-skin-nav-link-hover" href="/">Bergkamp Ho</a>
      <nav class="hidden sm:flex space-x-4 text-xs">
        <a
          class="hover:text-skin-nav-link-hover data-[ui=active]:text-skin-nav-link-hover"
          href="#about">About</a
        >
        <a
          class="hover:text-[--color-salmon] data-[ui=active]:text-[--color-salmon]"
          href="#skills">Skills</a
        >
        <a
          class="hover:text-[--color-lemon] data-[ui=active]:text-[--color-lemon]"
          href="#portfolio">Portfolio</a
        >
        <a
          class="hover:text-[--color-ocean] data-[ui=active]:text-[--color-ocean]"
          href="#contact">Contact</a
        >
      </nav>
      <div class="flex items-center text-base space-x-2">
        <a
          data-track-label="GitHub"
          aria-label="GitHub"
          target="_blank"
          class="hover:text-skin-nav-link-hover"
          href="https://github.com/bergkampho"
        >
          <i class="icon-github"></i>
        </a>
        <a
          data-track-label="LinkedIn"
          aria-label="LinkedIn"
          target="_blank"
          class="hover:text-skin-nav-link-hover"
          href="http://www.linkedin.com/in/bergkampho"
        >
          <i class="icon-linkedin-sign"></i>
        </a>
        <div class="inline-block"><ThemeToggle /></div>
      </div>
    </div>
  </div>
</header>
