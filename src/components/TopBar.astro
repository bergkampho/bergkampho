---
import Avatar from "./Avatar.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="" data-aos="fade-down" data-aos-delay="800">
  <div class="container mx-auto my-4 text-sm text-skin-nav-link">
    <div class="flex justify-between items-center">
      <a
        class="hover:text-skin-nav-link-hover"
        href="/"
        aria-label="Avatar"
        data-track-label="Avatar"
      >
        <Avatar />
      </a>
      <div class="flex items-center text-base space-x-2">
        <a
          data-track-label="GitHub"
          aria-label="GitHub"
          target="_blank"
          class="hover:text-skin-nav-link-hover"
          href="https://github.com/bergkampho"
        >
          <i class="icon-github"></i>
        </a>
        <a
          data-track-label="LinkedIn"
          aria-label="LinkedIn"
          target="_blank"
          class="hover:text-skin-nav-link-hover"
          href="http://www.linkedin.com/in/bergkampho"
        >
          <i class="icon-linkedin-sign"></i>
        </a>
        <div class="inline-block"><ThemeToggle /></div>
      </div>
    </div>
  </div>
</header>
