<style is:global>
  /* Unscoped, delivered as-is to the browser. Applies to everywhere on the site. */

  :root {
    --color-salmon: #f34848;
    --color-lemon: #f1c40f;
    --color-ocean: #0e83cd;
    --color-grey-light: #d3d3d3;
    --color-grey-dark: #504a46;
    --body-color-dark: var(--color-grey-dark);
    --body-color-light: var(--color-grey-light);

    /* Font sizes */
    ---body-font-size: 21px;
    ---h1-font-size: 36px;
    ---h2-font-size: 15px;
    ---caption-font-size: 16px;

    /* Scale up font size for larger screen */
    @media (min-width: 768px) {
      ---body-font-size: 27px;
      ---h1-font-size: 45px;
      ---h2-font-size: 18px;
      ---caption-font-size: 20px;
    }
  }

  /* Typography */
  body {
    font-size: var(---body-font-size);
  }
  h1 {
    font-size: var(---h1-font-size);
  }
  h2 {
    font-size: var(---h2-font-size);
  }
  .nav,
  .small,
  .tag,
  .popover-content {
    font-size: var(---caption-font-size);
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  .popover-title {
    font-family: "Open Sans Condensed", "Sans Serif", "Georgia", serif;
    font-weight: 700;
    text-transform: capitalize;
  }
  body,
  p {
    font-family: "Open Sans Condensed", "Sans Serif", "Georgia", serif;
    font-weight: 300;
    line-height: 1.4;
  }

  html {
    scroll-behavior: smooth;
  }

  a {
    color: var(--color-salmon);
    font-weight: 700;
    -webkit-transition: 0.25s;
    -moz-transition: 0.25s;
    -ms-transition: 0.25s;
    -o-transition: 0.25s;
    transition: 0.15s;
  }
  a:hover {
    color: #00afd8;
    text-decoration: none;
  }
  .popover-content li a {
    font-weight: 300 !important;
  }
  /* stlye for mobile only */
  @media (max-width: 767px) {
    .scroll-up {
      bottom: 5px;
      right: 5px;
    }
  }
  section {
    width: 100%;
    min-height: 500px;
    display: flex;
    align-items: center;
    position: relative;
    padding: 3rem 0;
    background-image: url("../img/bg-shade.png");
    background-size: cover;
    text-align: center;
  }
  /* stlye for desktop only */
  @media (min-width: 768px) {
    section {
      min-height: 80vh;
    }
  }
  #skills,
  #contact {
    height: auto;
  }
  section.salmon,
  section.apple,
  section.apple a,
  .navbar-default .navbar-nav > .active > a.salmon-nav,
  .navbar-default .navbar-nav > .active > a.ocean-nav {
    color: #fff;
  }
  section.salmon {
    background-color: var(--color-salmon);
  }
  .navbar-default .navbar-nav > .active > a.salmon-nav {
    color: var(--color-salmon);
  }
  section.lemon {
    background-color: var(--color-lemon);
  }
  .navbar-default .navbar-nav > .active > a.lemon-nav {
    color: var(--color-lemon);
  }
  .navbar-default .navbar-nav > .active > a.ocean-nav {
    color: var(--color-ocean);
  }

  html,
  body {
    height: 100%;
  }

  body {
    background: #f3f0f0;
    color: #504a46;
    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: 100%;
    min-height: 100%;
    position: relative;
  }
