---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  title: string;
  description?: string;
  tags: string[];
  slug?: string;
}

const { title, description, image, slug } = Astro.props;
---

<div
  class={`bg-skin-pop card-${slug} relative rounded-2xl lg:hover:shadow-md overflow-hidden h-[580px] md:hover:scale-[1.02] transform-gpu transition`}
>
  <a
    href={`/projects/${slug}/`}
    class="static"
    data-track-label={title}
    aria-label={title}
  >
    <div class="p-4">
      <h2 class="text-xs text-skin-pop mb-2">{title}</h2>
      {
        description && (
          <p class="text-sm text-skin-base font-normal">{description}</p>
        )
      }
    </div>

    <div class="absolute bottom-0 z-1">
      <Image
        src={image}
        alt={title}
        class="ml-4 rounded-t-md h-[420px] object-cover object-left"
        transition:name={slug}
      />
    </div>

    <div
      class="absolute bottom-2 right-2 text-gray-50 bg-gray-600 opacity-80 rounded-full w-6 h-6 flex items-center justify-center"
    >
      <i class="icon-chevron-right"></i>
    </div>
  </a>
</div>
